<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.example.wilson.wcomercial.Estoque">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:text="CÃ³digo"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:gravity="center"
        android:id="@+id/estoque_codigo"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#000000"
                android:fontFamily="casual"
                android:id="@+id/estoque_nome"
                android:text="hello"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/estoque_preco"
                android:textSize="14dp"
                android:fontFamily="casual"
                android:textColor="#000000"
                android:text="hello"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#000000"
                android:id="@+id/estoque_quantidade"
                android:fontFamily="casual"
                android:text="hello"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="14dp"
                android:textColor="#ff0000"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:id="@+id/estoque_lucroestimado"
                android:text="hello"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="14dp"
                android:textColor="#ff0000"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:id="@+id/estoque_lucroesperado"
                android:text="hello"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:gravity="right"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="45dp"
                android:id="@+id/estoque_imagem"
                android:src="@drawable/seta"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
