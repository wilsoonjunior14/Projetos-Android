<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.wilson.wcomercial.View_Produtos.Produtos">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="#000000"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="Menu - Produtos"/>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal">

            <TableRow
                android:layout_marginBottom="50dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Novo Produto"
                    android:elevation="5dp"
                    android:background="#ffffff"
                    android:layout_marginTop="5dp"
                    android:fontFamily="casual"
                    android:layout_marginRight="15dp"
                    android:drawableTop="@drawable/add_produto"
                    android:onClick="novoproduto"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Listar Produtos"
                    android:elevation="5dp"
                    android:background="#ffffff"
                    android:fontFamily="casual"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:onClick="listar"
                    android:drawableTop="@drawable/listar_produtos"
                    />

            </TableRow>
            <TableRow android:layout_marginBottom="50dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vender Produtos"
                    android:elevation="5dp"
                    android:background="#ffffff"
                    android:fontFamily="casual"
                    android:onClick="venderprodutos"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:drawableTop="@drawable/vender_produto"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alterar Produto"
                    android:fontFamily="casual"
                    android:elevation="5dp"
                    android:background="#ffffff"
                    android:layout_marginTop="5dp"
                    android:onClick="alterar_produto"
                    android:layout_marginLeft="15dp"
                    android:drawableTop="@drawable/alterar"
                    />

            </TableRow>

        </TableLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configurações"
            android:fontFamily="casual"
            android:elevation="5dp"
            android:gravity="center"
            android:background="#ffffff"
            android:layout_marginTop="5dp"
            android:onClick="configprodutos"
            android:drawableTop="@drawable/configuracoes"
            />

    </LinearLayout>


</ScrollView>
