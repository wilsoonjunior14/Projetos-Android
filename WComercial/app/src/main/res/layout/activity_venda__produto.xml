<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#ffffff"
    tools:context="com.example.wilson.wcomercial.View_Produtos.Venda_Produto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Venda de Produtos"
            android:gravity="center"
            android:background="#000000"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="casual"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:onClick="buscarproduto"
            android:drawableTop="@drawable/camera"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:elevation="5dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="casual"
            android:text="Selecionar Produto"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vender"
                android:drawableLeft="@drawable/ok"
                android:textColor="#ffffff"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:onClick="vender_produtos"
                android:layout_marginRight="5dp"
                android:background="#00f"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#f00"
                android:onClick="cancelar"
                android:text="Cancelar"
                android:drawableLeft="@drawable/no"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:fontFamily="casual"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mensagem"
            android:textSize="18dp"
            android:gravity="center"
            android:fontFamily="casual"
            android:background="#000000"
            android:textColor="#ffffff"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/valor_total"
            android:background="#000000"
            android:textColor="#ff0000"
            android:fontFamily="casual"
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:elegantTextHeight="true"
            />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/lista"></ListView>


    </LinearLayout>

</ScrollView>
